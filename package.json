{
  "name": "vite-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit && cd sanity && tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:all": "playwright test --config=playwright.config.ci.ts",
    "test:e2e:func": "playwright test tests/e2e/",
    "test:a11y": "playwright test tests/accessibility/",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:quick": "playwright test tests/e2e/homepage.spec.ts tests/accessibility/homepage-a11y.spec.ts",
    "test:smoke": "playwright test -g 'should load successfully|should not have automatically detectable accessibility violations'",
    "test:a11y:core": "playwright test tests/accessibility/ -g 'WCAG 2.1 AA Compliance'",
    "test:by-page:home": "playwright test -g 'Homepage|homepage'",
    "test:by-page:projects": "playwright test -g 'Projects Page|projects'",
    "test:by-page:about": "playwright test -g 'About Page|about'",
    "test:by-page:contact": "playwright test -g 'Contact Page|contact'",
    "check:utility-first": "node scripts/check-utility-first.js",
    "test:utility-first": "vitest run src/lib/__tests__/utility-first.test.ts",
    "test:architecture": "vitest run src/lib/__tests__/architecture.test.ts",
    "test:documentation": "vitest run src/lib/__tests__/documentation.test.ts",
    "test:css-variables": "vitest run src/lib/__tests__/css-variables.test.ts",
    "check:all": "node scripts/check-best-practices.js",
    "docs:generate": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:json": "typedoc --json docs/documentation.json",
    "prepare": "husky"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^3.4.1",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "vite": "^5.4.2",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sanity/client": "^7.12.1",
    "@sanity/image-url": "^1.2.0",
    "@sanity/vision": "^4.15.0",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "next": "^16.0.1",
    "next-sanity": "^11.6.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.4.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
