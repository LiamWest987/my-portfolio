/* ===== GLOBAL RESETS ===== */
*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  font-size: 16px;
  scroll-behavior: smooth;
}

body {
  font-family: var(--font-family);
  background-color: var(--background);
  color: var(--foreground);
  line-height: 1.6;
  overflow-x: hidden;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  transition:
    background-color var(--transition-medium),
    color var(--transition-medium);
}

main {
  flex: 1;
}

/* ===== TYPOGRAPHY ===== */
h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: var(--font-weight-semibold);
  line-height: 1.2;
  color: var(--foreground);
}

h1 {
  font-size: var(--font-size-4xl);
}

h2 {
  font-size: var(--font-size-3xl);
}

h3 {
  font-size: var(--font-size-2xl);
}

h4 {
  font-size: var(--font-size-xl);
}

@media (min-width: 768px) {
  h1 {
    font-size: var(--font-size-6xl);
  }

  h2 {
    font-size: var(--font-size-4xl);
  }

  h3 {
    font-size: var(--font-size-3xl);
  }
}

@media (min-width: 1024px) {
  h1 {
    font-size: var(--font-size-7xl);
  }
}

p {
  margin-bottom: var(--spacing-md);
}

a {
  color: inherit;
  text-decoration: none;
}

img,
svg,
video {
  max-width: 100%;
  height: auto;
  display: block;
}

/* ===== SELECTION ===== */
::selection {
  background-color: var(--primary);
  color: var(--primary-foreground);
}

::-moz-selection {
  background: var(--primary-color);
  color: white;
}

/* ===== FOCUS STYLES ===== */
:focus-visible {
  outline: 2px solid var(--ring);
  outline-offset: 2px;
}

button:focus-visible,
a:focus-visible {
  outline: 2px solid var(--ring);
  outline-offset: 2px;
}

/* ===== SCROLLBAR ===== */
::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  background: var(--background);
}

::-webkit-scrollbar-thumb {
  background: var(--muted);
  border-radius: var(--radius-full);
}

::-webkit-scrollbar-thumb:hover {
  background: var(--muted-foreground);
}

/* ===== BACKGROUND ANIMATION ===== */
.background-animation {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: var(--z-background);
  overflow: hidden;
  pointer-events: none;
  background: linear-gradient(135deg, var(--background) 0%, #1a1f3c 100%);
}

.wave {
  position: absolute;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    var(--primary-dark),
    var(--primary-color),
    var(--primary-light)
  );
  opacity: 0.08;
  animation: wave 15s infinite linear;
  filter: blur(30px);
}

@keyframes wave {
  0% {
    transform: translate(-50%, -50%) rotate(0deg);
  }
  100% {
    transform: translate(-50%, -50%) rotate(360deg);
  }
}

/* Legacy global classes from effects.css for backward compatibility */
.background-gradient {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    135deg,
    rgba(45, 53, 97, 0.05) 0%,
    var(--background) 50%,
    rgba(230, 169, 85, 0.05) 100%
  );
}

.gradient-orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(64px);
  opacity: 0.3;
  animation: floatOrb 20s ease-in-out infinite;
}

.gradient-orb-1 {
  top: 10%;
  left: 10%;
  width: 300px;
  height: 300px;
  background: radial-gradient(circle, var(--primary) 0%, transparent 70%);
  animation:
    floatOrb 15s ease-in-out infinite,
    pulseOrb 8s ease-in-out infinite;
}

.gradient-orb-2 {
  bottom: 10%;
  right: 10%;
  width: 400px;
  height: 400px;
  background: radial-gradient(circle, var(--accent) 0%, transparent 70%);
  animation:
    floatOrb 20s ease-in-out infinite reverse,
    pulseOrb 10s ease-in-out infinite;
  animation-delay: 1s;
}

.gradient-orb-3 {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 350px;
  height: 350px;
  background: radial-gradient(circle, var(--primary-light) 0%, transparent 70%);
  animation:
    floatOrb 18s ease-in-out infinite,
    pulseOrb 12s ease-in-out infinite;
  animation-delay: 2s;
}

.grid-pattern {
  position: absolute;
  inset: 0;
  opacity: 0.02;
  background-image:
    linear-gradient(to right, currentColor 1px, transparent 1px),
    linear-gradient(to bottom, currentColor 1px, transparent 1px);
  background-size: 40px 40px;
}

.dot-pattern {
  position: absolute;
  inset: 0;
  opacity: 0.03;
  background-image: radial-gradient(circle, currentColor 1px, transparent 1px);
  background-size: 30px 30px;
}

@keyframes floatOrb {
  0%,
  100% {
    transform: translate(0, 0) rotate(0deg);
  }
  33% {
    transform: translate(30px, -30px) rotate(120deg);
  }
  66% {
    transform: translate(-20px, 20px) rotate(240deg);
  }
}

@keyframes pulseOrb {
  0%,
  100% {
    opacity: 0.2;
    transform: scale(1);
  }
  50% {
    opacity: 0.4;
    transform: scale(1.1);
  }
}

.geometric-shapes .shape {
  position: absolute;
  background: var(--primary-color);
  opacity: 0.08;
  border-radius: 50%;
  filter: blur(10px);
}

.shape-1 {
  width: 300px;
  height: 300px;
  top: 10%;
  left: 10%;
  animation: float1 15s infinite ease-in-out;
  background: linear-gradient(
    135deg,
    var(--primary-color),
    var(--primary-light)
  );
}

.shape-2 {
  width: 200px;
  height: 200px;
  top: 60%;
  right: 15%;
  animation: float2 18s infinite ease-in-out;
  background: linear-gradient(
    135deg,
    var(--primary-dark),
    var(--primary-color)
  );
}

.shape-3 {
  width: 150px;
  height: 150px;
  bottom: 10%;
  left: 20%;
  animation: float3 20s infinite ease-in-out;
  background: linear-gradient(
    135deg,
    var(--primary-light),
    var(--primary-color)
  );
}

.shape-4 {
  width: 180px;
  height: 180px;
  top: 30%;
  right: 30%;
  animation: float4 16s infinite ease-in-out;
  background: linear-gradient(
    135deg,
    var(--primary-color),
    var(--primary-dark)
  );
  border-radius: 30%;
}

.shape-5 {
  width: 120px;
  height: 120px;
  bottom: 30%;
  left: 40%;
  animation: float5 14s infinite ease-in-out;
  background: linear-gradient(
    135deg,
    var(--primary-light),
    var(--primary-dark)
  );
  border-radius: 20%;
}

/* Varied animation patterns for each shape */
@keyframes float1 {
  0% {
    transform: translate(0, 0) scale(1);
  }
  25% {
    transform: translate(50px, -30px) scale(1.1);
  }
  50% {
    transform: translate(20px, 40px) scale(0.9);
  }
  75% {
    transform: translate(-40px, -20px) scale(1.05);
  }
  100% {
    transform: translate(0, 0) scale(1);
  }
}

@keyframes float2 {
  0% {
    transform: translate(0, 0) rotate(0deg);
  }
  33% {
    transform: translate(30px, 40px) rotate(120deg);
  }
  66% {
    transform: translate(-20px, -30px) rotate(240deg);
  }
  100% {
    transform: translate(0, 0) rotate(360deg);
  }
}

@keyframes float3 {
  0% {
    transform: translate(0, 0) scale(1);
  }
  20% {
    transform: translate(-30px, 20px) scale(1.2);
  }
  40% {
    transform: translate(40px, -30px) scale(0.8);
  }
  60% {
    transform: translate(-20px, -40px) scale(1.1);
  }
  80% {
    transform: translate(30px, 30px) scale(0.9);
  }
  100% {
    transform: translate(0, 0) scale(1);
  }
}

@keyframes float4 {
  0% {
    transform: translate(0, 0) rotate(0deg) scale(1);
  }
  25% {
    transform: translate(40px, -20px) rotate(90deg) scale(1.1);
  }
  50% {
    transform: translate(-30px, 30px) rotate(180deg) scale(0.9);
  }
  75% {
    transform: translate(-20px, -40px) rotate(270deg) scale(1.05);
  }
  100% {
    transform: translate(0, 0) rotate(360deg) scale(1);
  }
}

@keyframes float5 {
  0% {
    transform: translate(0, 0) scale(1);
  }
  20% {
    transform: translate(-40px, 0) scale(1.2);
  }
  40% {
    transform: translate(0, -30px) scale(0.8);
  }
  60% {
    transform: translate(30px, 0) scale(1.1);
  }
  80% {
    transform: translate(0, 30px) scale(0.9);
  }
  100% {
    transform: translate(0, 0) scale(1);
  }
}

/* Add a subtle pulse animation to the shapes */
.shape-1,
.shape-2,
.shape-3,
.shape-4,
.shape-5 {
  animation:
    float1 15s infinite ease-in-out,
    pulse 6s infinite ease-in-out;
}

@keyframes pulse {
  0%,
  100% {
    opacity: 0.08;
  }
  50% {
    opacity: 0.15;
  }
}

/* ===== HERO SECTION ===== */
