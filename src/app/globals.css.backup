}

.theme-picker-content {
  background: var(--bg-secondary);
  padding: 2rem;
  border-radius: 12px;
  width: 90%;
  max-width: 400px;
  box-shadow: var(--elevation-4);
}

.theme-picker-content h3 {
  margin-bottom: 1.5rem;
  color: var(--text-primary);
}

.theme-options {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
}

.theme-preview {
  width: 2rem;
  height: 2rem;
  border-radius: 0.25rem;
  border: 2px solid var(--border-color);
}

.theme-preview.dark {
  background: linear-gradient(135deg, #0f172a, #1e293b);
}

.theme-preview.neon {
  background: linear-gradient(135deg, #0a0f2e, #1a1f3c);
  box-shadow: 0 0 10px #00f5ff;
}

.theme-preview.golden {
  background: linear-gradient(135deg, #2c1810, #3d2316);
  box-shadow: 0 0 10px #ff6b35;
}

.theme-preview.mint {
  background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
  box-shadow: 0 0 10px #4caf50;
}

/* ===== RESPONSIVE STYLES FROM style.css ===== */
@media (max-width: 768px) {
  .nav-links {
    display: none;
  }

  .expertise-grid {
    grid-template-columns: 1fr;
  }

  .social-links {
    gap: var(--spacing-md);
  }

  .social-link {
    width: 2.5rem;
    height: 2.5rem;
    font-size: var(--font-size-lg);
  }

  .modal-content {
    width: 95%;
    padding: var(--spacing-lg);
    margin: var(--spacing-md) auto;
  }

  .modal-title {
    font-size: var(--font-size-lg);
  }

  .modal-header {
    flex-direction: column;
    align-items: flex-start;
  }

  .sort-controls {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-sm);
  }

  .sort-button {
    padding: var(--spacing-sm) var(--spacing-md);
    font-size: var(--font-size-xs);
  }

  .category-button {
    min-width: 110px;
  }
}

@media (max-width: 480px) {
  .sort-controls {
    flex-direction: column;
    align-items: stretch;
  }

  .sort-button {
    width: 100%;
    text-align: center;
    justify-content: center;
  }

  .category-button {
    width: 100%;
    justify-content: space-between;
  }

  .category-dropdown {
    width: 100%;
  }

  /* Full-screen modal for mobile */
  .modal {
    padding: 0;
    background: var(--card-bg);
  }

  .modal-content {
    width: 100%;
    max-width: 100%;
    height: 100%;
    margin: 0;
    padding: var(--spacing-md);
    border-radius: 0;
    border: none;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
  }

  .modal-header {
    position: sticky;
    top: 0;
    background: var(--card-bg);
    padding: var(--spacing-md) 0;
    z-index: 10;
    border-bottom: 1px solid var(--border-color);
    margin-bottom: var(--spacing-md);
  }

  .close-modal {
    position: absolute;
    top: var(--spacing-sm);
    right: var(--spacing-sm);
    font-size: var(--font-size-xl);
    padding: var(--spacing-sm);
    background: rgba(0, 0, 0, 0.2);
    border-radius: 50%;
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .modal-title {
    font-size: var(--font-size-lg);
    padding-right: 3.5rem;
  }

  .modal-links {
    flex-direction: column;
  }

  .modal-link {
    width: 100%;
    padding: 0.75rem 1.5rem;
    background-color: var(--primary-color);
    color: white;
    border: 1px solid var(--primary-color);
    border-radius: var(--radius-md);
    text-decoration: none;
    font-weight: 500;
    transition: all var(--transition-speed) ease;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .modal-link:hover {
    background-color: var(--primary-dark);
    border-color: var(--primary-dark);
    transform: translateY(-2px);
  }

  .project-meta {
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .project-title {
    font-size: var(--font-size-md);
  }

  .project-description {
    font-size: var(--font-size-sm);
  }
}

/**
 * Header / Navigation Styles
 */

/* ===== HEADER ===== */
.header {
  position: sticky;
  top: 0;
  z-index: var(--z-sticky);
  width: 100%;
  border-bottom: 1px solid var(--border);
  background: color-mix(in srgb, var(--background) 95%, transparent);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  transition:
    background-color var(--transition-medium),
    border-color var(--transition-medium);
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 4rem;
  max-width: var(--container-max-width);
  margin: 0 auto;
  padding: 0 var(--spacing-md);
}

@media (min-width: 768px) {
  .header-content {
    padding: 0 var(--spacing-xl);
  }
}

/* ===== LOGO ===== */
.logo {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--foreground);
  text-decoration: none;
  transition: color var(--transition-base);
  display: flex;
  align-items: center;
}

.logo:hover {
  color: var(--primary);
}

.logo-bracket {
  color: var(--primary);
}

.logo-accent {
  color: var(--accent);
}

/* ===== NAVIGATION ===== */
.nav-links {
  display: none;
  align-items: center;
  gap: var(--spacing-xl);
  list-style: none;
  margin: 0;
  padding: 0;
}

@media (min-width: 768px) {
  .nav-links {
    display: flex;
  }
}

.nav-links a {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--foreground);
  text-decoration: none;
  transition: color var(--transition-base);
  position: relative;
}

.nav-links a:hover {
  color: var(--accent);
}

.nav-links a.active {
  color: var(--accent);
}

/* Underline effect for active link */
.nav-links a.active::after {
  content: "";
  position: absolute;
  bottom: -0.5rem;
  left: 0;
  right: 0;
  height: 2px;
  background: var(--accent);
  border-radius: var(--radius-full);
}

/* ===== HEADER ACTIONS ===== */
.header-actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

/* ===== DARK MODE TOGGLE ===== */
.theme-toggle {
  width: 2.5rem;
  height: 2.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-md);
  border: none;
  background: transparent;
  color: var(--foreground);
  cursor: pointer;
  transition: all var(--transition-base);
}

.theme-toggle:hover {
  background: var(--secondary);
  color: var(--primary);
}

.theme-toggle svg {
  width: 1.25rem;
  height: 1.25rem;
}

/* Hide/show icons based on theme */
.theme-toggle .sun-icon {
  display: none;
}

.dark .theme-toggle .sun-icon {
  display: block;
}

.dark .theme-toggle .moon-icon {
  display: none;
}

/* ===== MOBILE MENU TOGGLE ===== */
.mobile-menu-toggle {
  display: flex;
  width: 2.5rem;
  height: 2.5rem;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-md);
  border: none;
  background: transparent;
  color: var(--foreground);
  cursor: pointer;
  transition: all var(--transition-base);
}

@media (min-width: 768px) {
  .mobile-menu-toggle {
    display: none;
  }
}

.mobile-menu-toggle:hover {
  background: var(--secondary);
}

.mobile-menu-toggle svg {
  width: 1.5rem;
  height: 1.5rem;
}

/* ===== MOBILE MENU ===== */
.mobile-menu {
  display: none;
  position: fixed;
  top: 4rem;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--background);
  z-index: var(--z-dropdown);
  padding: var(--spacing-xl);
  opacity: 0;
  transform: translateY(-20px);
  transition:
    opacity var(--transition-medium),
    transform var(--transition-medium);
}

.mobile-menu.active {
  display: block;
  opacity: 1;
  transform: translateY(0);
}

.mobile-menu-links {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
  list-style: none;
  margin: 0;
  padding: 0;
}

.mobile-menu-links a {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-medium);
  color: var(--foreground);
  text-decoration: none;
  padding: var(--spacing-md) 0;
  transition: color var(--transition-base);
}

.mobile-menu-links a:hover,
.mobile-menu-links a.active {
  color: var(--primary);
}

/**
 * Form Components
 */

/* ===== FORM LABELS ===== */
label {
  display: block;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--foreground);
  margin-bottom: 0.5rem;
}

/* ===== INPUT FIELDS ===== */
.input {
  width: 100%;
  padding: 0.75rem 1rem;
  font-size: var(--font-size-sm);
  font-family: var(--font-family);
  color: var(--foreground);
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: var(--radius-md);
  transition: all var(--transition-base);
}

.input::placeholder {
  color: var(--muted-foreground);
}

.input:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(45, 53, 97, 0.1);
}

.dark .input:focus {
  box-shadow: 0 0 0 3px rgba(89, 102, 163, 0.2);
}

.input:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* ===== TEXTAREA ===== */
.textarea {
  width: 100%;
  padding: 0.75rem 1rem;
  font-size: var(--font-size-sm);
  font-family: var(--font-family);
  color: var(--foreground);
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: var(--radius-md);
  resize: vertical;
  min-height: 120px;
  transition: all var(--transition-base);
}

.textarea::placeholder {
  color: var(--muted-foreground);
}

.textarea:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(45, 53, 97, 0.1);
}

.dark .textarea:focus {
  box-shadow: 0 0 0 3px rgba(89, 102, 163, 0.2);
}

.textarea:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* ===== FORM GROUPS ===== */
.form-group {
  margin-bottom: 1.5rem;
}

.form-group:last-child {
  margin-bottom: 0;
}

/* ===== CONTACT INFO CARDS ===== */
.contact-info-card {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: var(--radius-lg);
  padding: 1.5rem;
  transition: all var(--transition-medium);
}

.contact-info-card:hover {
  box-shadow: var(--shadow-md);
}

.contact-info-inner {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
}

.contact-icon {
  flex-shrink: 0;
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 50%;
  background: rgba(45, 53, 97, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.dark .contact-icon {
  background: rgba(89, 102, 163, 0.2);
}

.contact-icon svg {
  width: 1.25rem;
  height: 1.25rem;
  color: var(--primary);
}

.contact-info-content h3 {
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-semibold);
  margin-bottom: 0.25rem;
}

.contact-info-content p {
  font-size: var(--font-size-sm);
  color: var(--muted-foreground);
  margin: 0;
}

/* ===== CONTACT GRID ===== */
.contact-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 2rem;
}

@media (min-width: 1024px) {
  .contact-grid {
    grid-template-columns: 1fr 2fr;
  }
}

.contact-info-col {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.contact-form-col {
  /* Form column */
}

/* ===== SOCIAL BUTTONS GRID ===== */
.social-buttons {
  display: flex;
  gap: 0.75rem;
}

/**
 * Theme Dropdown Styles
 */

.theme-dropdown {
  position: relative;
}

.theme-dropdown-trigger {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  padding: 0.5rem;
  background: var(--secondary);
  border: 1px solid var(--border);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-base);
  color: var(--foreground);
}

.theme-dropdown-trigger:hover {
  background: var(--muted);
  border-color: var(--accent);
}

.theme-dropdown-trigger .sun-icon {
  display: block;
}

.theme-dropdown-trigger .moon-icon {
  display: none;
}

.dark .theme-dropdown-trigger .sun-icon {
  display: none;
}

.dark .theme-dropdown-trigger .moon-icon {
  display: block;
}

.theme-dropdown-trigger .chevron-icon {
  opacity: 0.5;
  transition: transform var(--transition-base);
}

.theme-dropdown.active .theme-dropdown-trigger .chevron-icon {
  transform: rotate(180deg);
}

.theme-dropdown-content {
  position: absolute;
  top: calc(100% + 0.5rem);
  right: 0;
  min-width: 220px;
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  padding: 0.5rem;
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10px);
  transition: all var(--transition-base);
  z-index: 1000;
}

.theme-dropdown.active .theme-dropdown-content {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.theme-section {
  padding: 0.5rem 0;
}

.theme-section + .theme-section {
  border-top: 1px solid var(--border);
  margin-top: 0.5rem;
  padding-top: 0.75rem;
}

.theme-section-title {
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-semibold);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--muted-foreground);
  margin-bottom: 0.5rem;
  padding: 0 0.5rem;
}

.theme-option {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  width: 100%;
  padding: 0.5rem;
  background: transparent;
  border: 1px solid transparent;
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-base);
  color: var(--foreground);
  font-size: var(--font-size-sm);
}

.theme-option:hover {
  background: var(--secondary);
}

.theme-option.active {
  background: var(--accent);
  color: var(--accent-foreground);
  border-color: var(--accent);
}

.theme-option-visual {
  display: flex;
  gap: 0.25rem;
  width: 2rem;
  height: 2rem;
  border-radius: var(--radius-sm);
  overflow: hidden;
}

.theme-option-visual span {
  flex: 1;
}

/* Mode visuals */
.mode-light {
  background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 100%);
  border: 1px solid #0284c7;
}

.mode-dark {
  background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
  border: 1px solid #475569;
}

.mode-auto {
  background: linear-gradient(
    90deg,
    #e0f2fe 0%,
    #e0f2fe 50%,
    #1e293b 50%,
    #1e293b 100%
  );
  border: 1px solid #64748b;
}

/* Responsive */
@media (max-width: 640px) {
  .theme-dropdown-content {
    right: auto;
    left: 50%;
    transform: translateX(-50%) translateY(-10px);
  }

  .theme-dropdown.active .theme-dropdown-content {
    transform: translateX(-50%) translateY(0);
  }
}

/* Click outside to close */
.theme-dropdown-backdrop {
  position: fixed;
  inset: 0;
  z-index: 999;
  display: none;
}

.theme-dropdown.active .theme-dropdown-backdrop {
  display: block;
}

/**
 * Tab Component Styles
 */

/* ===== TABS CONTAINER ===== */
.tabs {
  width: 100%;
}

/* ===== TABS LIST (Tab Navigation) ===== */
.tabs-list {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 2rem;
  border-bottom: 1px solid var(--border);
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none; /* Firefox */
}

.tabs-list::-webkit-scrollbar {
  display: none; /* Chrome, Safari, Edge */
}

/* ===== TABS TRIGGER (Tab Buttons) ===== */
.tabs-trigger {
  padding: 0.75rem 1.5rem;
  background: transparent;
  border: none;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  font-family: var(--font-family);
  color: var(--muted-foreground);
  cursor: pointer;
  position: relative;
  white-space: nowrap;
  transition: color var(--transition-base);
  border-bottom: 2px solid transparent;
  margin-bottom: -1px;
}

.tabs-trigger:hover {
  color: var(--foreground);
}

.tabs-trigger.active {
  color: var(--accent);
  border-bottom-color: var(--accent);
}

/* ===== TABS CONTENT ===== */
.tabs-content {
  display: none;
  animation: fadeIn 0.3s ease-in;
}

.tabs-content.active {
  display: block;
}

/* ===== TABS CONTENT GRID (For Skills) ===== */
.tabs-content-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1rem;
}

@media (min-width: 640px) {
  .tabs-content-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1.25rem;
  }
}

@media (min-width: 1024px) {
  .tabs-content-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }
}

/* ===== TABS CONTENT LIST (For Education, Experience, Awards) ===== */
.tabs-content-list {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

/* ===== SKILL CARD ===== */
.skill-card {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: var(--radius-lg);
  padding: 1.5rem;
  transition: all var(--transition-medium);
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.skill-card:hover {
  box-shadow: var(--shadow-md);
  border-color: var(--accent);
}

.skill-card-header {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.skill-card-icon {
  width: 2.5rem;
  height: 2.5rem;
  background: rgba(var(--accent-rgb), 0.1);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.skill-card-icon svg {
  width: 1.25rem;
  height: 1.25rem;
  color: var(--accent);
}

.skill-card-title {
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-semibold);
  color: var(--foreground);
  margin: 0;
}

.skill-card-description {
  font-size: var(--font-size-sm);
  color: var(--muted-foreground);
  line-height: 1.6;
  margin: 0;
}

.skill-card-level {
  font-size: var(--font-size-xs);
  color: var(--accent);
  font-weight: var(--font-weight-medium);
}

/* ===== TIMELINE ITEM ===== */
.timeline-item {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: var(--radius-lg);
  padding: 1.5rem;
  transition: all var(--transition-medium);
  position: relative;
}

.timeline-item:hover {
  box-shadow: var(--shadow-md);
  border-color: var(--accent);
}

.timeline-item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 1rem;
  margin-bottom: 0.75rem;
}

.timeline-item-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--foreground);
  margin: 0 0 0.25rem 0;
}

.timeline-item-subtitle {
  font-size: var(--font-size-sm);
  color: var(--accent);
  font-weight: var(--font-weight-medium);
  margin: 0;
}

.timeline-item-date {
  font-size: var(--font-size-sm);
  color: var(--muted-foreground);
  white-space: nowrap;
}

.timeline-item-description {
  font-size: var(--font-size-sm);
  color: var(--muted-foreground);
  line-height: 1.6;
  margin: 0;
}

.timeline-item-description ul {
  margin: 0.5rem 0 0 1.25rem;
  padding: 0;
}

.timeline-item-description li {
  margin: 0.25rem 0;
}

/* ===== AWARD CARD ===== */
.award-card {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: var(--radius-lg);
  padding: 1.5rem;
  transition: all var(--transition-medium);
  display: flex;
  gap: 1rem;
}

.award-card:hover {
  box-shadow: var(--shadow-md);
  border-color: var(--accent);
}

.award-card-icon {
  width: 3rem;
  height: 3rem;
  background: rgba(var(--accent-rgb), 0.1);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.award-card-icon svg {
  width: 1.5rem;
  height: 1.5rem;
  color: var(--accent);
}

.award-card-content {
  flex: 1;
}

.award-card-title {
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-semibold);
  color: var(--foreground);
  margin: 0 0 0.25rem 0;
}

.award-card-organization {
  font-size: var(--font-size-sm);
  color: var(--accent);
  font-weight: var(--font-weight-medium);
  margin: 0 0 0.5rem 0;
}

.award-card-date {
  font-size: var(--font-size-sm);
  color: var(--muted-foreground);
  margin: 0 0 0.5rem 0;
}

.award-card-description {
  font-size: var(--font-size-sm);
  color: var(--muted-foreground);
  line-height: 1.6;
  margin: 0;
}

/* ===== FOOTER COMPONENTS (from components.css) ===== */
.footer {
  background: var(--card);
  margin-top: 4rem;
  padding: 3rem 0 0;
}

.footer-content {
  display: grid;
  grid-template-columns: 1fr;
  gap: 3rem;
  padding-bottom: 2.5rem;
}

@media (min-width: 768px) {
  .footer-content {
    grid-template-columns: 1fr 2fr;
    gap: 6rem;
  }
}

@media (min-width: 1024px) {
  .footer-content {
    grid-template-columns: 1fr 1.5fr;
    gap: 8rem;
  }
}

/* Brand Section */
.footer-brand {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1.5rem;
  text-align: center;
}

.footer-logo {
  font-size: 1.5rem;
  font-weight: var(--font-weight-bold);
  color: var(--foreground);
  text-decoration: none;
  transition: opacity var(--transition-fast);
}

.footer-logo:hover {
  opacity: 0.8;
}

.footer-tagline {
  color: var(--muted-foreground);
  font-size: var(--font-size-sm);
  line-height: 1.7;
  max-width: 420px;
  margin: 0;
}

.footer-social-links {
  display: flex;
  gap: 0.75rem;
}

.footer-social-icon {
  width: 40px;
  height: 40px;
  border: 1px solid var(--border);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--foreground);
  transition: all var(--transition-fast);
  text-decoration: none;
}

.footer-social-icon:hover {
  background: var(--accent);
  border-color: var(--accent);
  color: var(--accent-foreground);
}

.footer-back-to-top-container {
  display: flex;
  justify-content: center;
  padding: 2rem 0;
  border-top: 1px solid var(--border);
  margin-top: 2rem;
}

.back-to-top {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  border: 1px solid var(--border);
  background: transparent;
  color: var(--foreground);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-fast);
  font-family: inherit;
}

.back-to-top:hover {
  background: var(--accent);
  border-color: var(--accent);
  color: var(--accent-foreground);
}

/* Navigation Grid */
.footer-nav-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 3rem;
}

@media (min-width: 640px) {
  .footer-nav-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 4rem;
  }
}

.footer-nav-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1.5rem;
  text-align: center;
}

.footer-nav-heading {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--foreground);
  margin: 0;
}

.footer-nav-links {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

.footer-nav-link {
  color: var(--muted-foreground);
  text-decoration: none;
  font-size: var(--font-size-sm);
  transition: color var(--transition-fast);
  width: fit-content;
}

.footer-nav-link:hover {
  color: var(--accent);
}

/* Copyright Bar */
.footer-copyright-bar {
  background: transparent;
  padding: 1.5rem 0;
}

.footer-copyright-text {
  color: var(--accent);
  font-size: var(--font-size-sm);
  text-align: center;
  margin: 0;
}
